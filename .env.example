# Database Configuration
DB_NAME=electionbot_db
DB_USER=electionbot_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-org-id  # Optional

# API URLs (defaults should work for most users)
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Server Configuration
EXTERNAL_PORT=8080
INTERNAL_PORT=8081

# Model Configuration (Optional - defaults to GPT-3.5 and GPT-4)
ELECTIONBOT_MODEL_SMALL=gpt-3.5-turbo
ELECTIONBOT_MODEL_DEFAULT=gpt-4

# Set to 'true' to use custom API endpoint (for enterprise users)
USE_CUSTOM_ENDPOINT=false